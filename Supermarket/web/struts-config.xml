<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

	<!-- Data Sources -->
	<data-sources>
	</data-sources>

	<!-- Form Beans -->
	<form-beans>
		<form-bean name="productForm"
			type="org.apache.struts.validator.DynaValidatorActionForm" />
	</form-beans>

	<!-- Global Exceptions -->
	<global-exceptions>
	</global-exceptions>

	<!-- Global Forwards -->
	<global-forwards>
		<forward name="companyinfo" path="/companyInfoAction.do?method=view" />
		<forward name="addnegotiator" path="/offerNegotiatorAction.do?method=view" />
	</global-forwards>

	<!-- Action Mappings -->
	<action-mappings>

		<action path="/store" type="com.am.supermkt.core.Store" name="signInForm"
			scope="request" validate="false" parameter="method">

			<forward name="inputDunsForward" path="/inputDuns.do?method=view" />
		</action>

	</action-mappings>

	<!-- Controller -->
	<controller processorClass="gov.gsa.eoffer.common.actions.EOfferRequestProcessor" />


	<!-- Resources -->
	<!-- Message Resources -->
	<message-resources
		parameter="gov.gsa.eoffer.common.resources.ApplicationResources" null="false" />

	<!-- Plugin -->
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<!-- Path to XML definition file -->
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<!-- Set Module-awareness to true -->
		<set-property property="moduleAware" value="true" />
	</plug-in>

	<plug-in className="formdef.plugin.FormDefPlugIn">
		<set-property property="defnames" value="/WEB-INF/form-defs.xml" />
	</plug-in>

	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,
                /WEB-INF/validation.xml" />
	</plug-in>

</struts-config>